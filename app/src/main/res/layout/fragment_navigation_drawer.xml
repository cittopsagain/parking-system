<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <RelativeLayout
        android:id="@+id/header_relative_layout_id"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:background="@drawable/abstract_geometric_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <com.citparkingsystem.lib.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:id="@+id/user_profile_circle_image_view_id" />

        <TextView
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:text="@string/full_name"
            android:id="@+id/full_name_text_view_id"
            android:layout_below="@+id/user_profile_circle_image_view_id"
            android:textColor="#FAFAFA" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawer_recycler_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_relative_layout_id"
        android:background="#FAFAFA"
        android:layout_marginTop="15dp" />

</RelativeLayout>